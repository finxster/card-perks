# Database Configuration
DATABASE_URL="your_postgres_database_url"

# JWT Secret
JWT_SECRET="your-jwt-secret-key"

# Cloudflare R2 Configuration (Optional - for image storage)
# You can get these from your Cloudflare dashboard under R2
CLOUDFLARE_ACCOUNT_ID="your_cloudflare_account_id"
CLOUDFLARE_R2_ACCESS_KEY_ID="your_r2_access_key_id"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your_r2_secret_access_key"
CLOUDFLARE_R2_BUCKET_NAME="cardperks-ocr-images"
CLOUDFLARE_R2_PUBLIC_URL="https://pub-YOUR_ACCOUNT_ID.r2.dev"

# Email Worker Configuration
# This should be the URL of your Cloudflare Worker for sending emails
CLOUDFLARE_EMAIL_WORKER="https://your-email-worker.your-subdomain.workers.dev"